PACKAGES = openal-soft ogg vorbis alure zlib physfs lua lua-cjson glfw bullet
GENERATED = $(PACKAGES)

all: .gitignore $(PACKAGES)

clean:
	rm -f .gitignore
	rm -fr $(PACKAGES)

.PHONY: all clean

.gitignore:
	echo '# FILE IS GENERATED BY MAKE - DO NOT EDIT' > $@
	for file in $(GENERATED) ; do \
		echo /$$file >> $@ ; \
	done

openal-soft:
	./get-src openal-soft 'http://www.openal-soft.org/openal-releases/openal-soft-1.16.0.tar.bz2'

ogg:
	./get-src ogg 'http://downloads.xiph.org/releases/ogg/libogg-1.3.2.tar.gz'

vorbis:
	./get-src vorbis 'http://downloads.xiph.org/releases/vorbis/libvorbis-1.3.5.tar.gz'

alure:
	./get-src alure 'http://kcat.strangesoft.net/alure-releases/alure-1.2.tar.bz2'

zlib:
	./get-src zlib 'http://zlib.net/zlib-1.2.8.tar.gz'

physfs:
	./get-src physfs 'http://icculus.org/physfs/downloads/physfs-2.0.3.tar.bz2'

lua:
	./get-src lua 'http://www.lua.org/ftp/lua-5.2.4.tar.gz'

lua-cjson:
	./get-src lua-cjson 'https://github.com/mpx/lua-cjson/archive/2.1.0.tar.gz'

glfw:
	./get-src glfw 'https://github.com/glfw/glfw/releases/download/3.1.1/glfw-3.1.1.zip'

bullet:
	./get-src bullet 'https://github.com/bulletphysics/bullet3/archive/2.83.6.tar.gz'
